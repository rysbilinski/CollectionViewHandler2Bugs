<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CollectionViewHandler2Bugs.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:CollectionViewHandler2Bugs.Pages"
    Title="CollectionViewHandler2Bugs">

    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate pages:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Items Layout">
            <ShellContent ContentTemplate="{DataTemplate pages:ItemsLayoutPage}" />
        </Tab>
        <Tab Title="Relative Source Binding">
            <ShellContent ContentTemplate="{DataTemplate pages:RelativeSourceBindingPage}" />
        </Tab>
    </TabBar>
</Shell>
